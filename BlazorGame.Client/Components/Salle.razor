@page "/salle"
<div class="dungeon-room">
    <div class="room-header">
        <h3>###############</h3>
        <div class="room-difficulty">
            <span class="difficulty-badge difficulty-medium">Difficult√©: #############</span>
        </div>
    </div>
    
    <div class="room-description">
        <p>#################################################### 
        ####################################################</p>
    </div>
    
    <div class="enemy-display">
        <img src="images/XXXX" alt="enemie_image" class="enemy-image" />
        <div class="enemy-stats">
            <span>Enemie : ###########</span>
            <span>PV : XX/XX</span>
            <span>Force: XX</span>
        </div>
    </div>
    
    <div class="action-choices">
        <h4>Que choisissez-vous ?</h4>
        <div class="action-buttons">
            <button class="btn-action btn-combat">
                Combattre
            </button>
            <button class="btn-action btn-flee">
                Fuir
            </button>
            <button class="btn-action btn-search">
                Fouiller
            </button>
        </div>
    </div>
    
    <div class="room-progress">
        <div class="progress-bar">
            <div class="progress-fill" style="width: 60%"></div>
        </div>
        <span>Progression: XX/XX salles</span>
    </div>
</div>

<style>
    .room-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
        border-bottom: 2px solid #d4af37;
        padding-bottom: 1rem;
    }

    .room-header h3 {
        color: #ffd700;
        margin: 0;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
    }

    .difficulty-badge {
        padding: 0.3rem 1rem;
        border-radius: 20px;
        font-weight: bold;
        font-size: 0.9rem;
    }

    .difficulty-medium {
        background: linear-gradient(135deg, #d4af37, #b8860b);
        color: #1a0f0f;
    }

    .room-description {
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 2rem;
        text-align: center;
        font-style: italic;
    }

    .enemy-display {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 2rem;
        margin: 2rem 0;
        padding: 1.5rem;
        background: rgba(0, 0, 0, 0.5);
        border-radius: 10px;
        border: 1px solid #8b4513;
    }

    .enemy-image {
        width: 120px;
        height: 120px;
        object-fit: contain;
        filter: drop-shadow(0 0 10px rgba(255, 0, 0, 0.3));
    }

    .enemy-stats {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        font-size: 1.1rem;
    }

    .action-choices {
        text-align: center;
        margin: 2rem 0;
    }

    .action-choices h4 {
        color: #ffd700;
        margin-bottom: 1.5rem;
        font-size: 1.3rem;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn-action {
        padding: 1rem 2rem;
        border: none;
        border-radius: 10px;
        font-size: 1.1rem;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        min-width: 150px;
        font-family: 'MedievalSharp', cursive;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
    }

    .btn-combat {
        background: linear-gradient(135deg, #dc3545, #c82333);
        color: white;
        border: 2px solid #8b0000;
    }

    .btn-combat:hover {
        background: linear-gradient(135deg, #c82333, #a71e2a);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(220, 53, 69, 0.4);
    }

    .btn-flee {
        background: linear-gradient(135deg, #ffc107, #e0a800);
        color: #1a0f0f;
        border: 2px solid #b8860b;
    }

    .btn-flee:hover {
        background: linear-gradient(135deg, #e0a800, #d39e00);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(255, 193, 7, 0.4);
    }

    .btn-search {
        background: linear-gradient(135deg, #28a745, #218838);
        color: white;
        border: 2px solid #155724;
    }

    .btn-search:hover {
        background: linear-gradient(135deg, #218838, #1e7e34);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(40, 167, 69, 0.4);
    }

    .room-progress {
        margin-top: 2rem;
        text-align: center;
    }

    .progress-bar {
        width: 100%;
        height: 20px;
        background: rgba(0, 0, 0, 0.5);
        border-radius: 10px;
        border: 1px solid #8b4513;
        overflow: hidden;
        margin-bottom: 0.5rem;
    }

    .progress-fill {
        height: 100%;
        background: linear-gradient(90deg, #d4af37, #ffd700);
        border-radius: 10px;
        transition: width 0.5s ease;
    }
</style>